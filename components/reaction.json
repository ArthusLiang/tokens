{
  "reaction": {
    "comment": "Applied to reaction buttons",
    "figma": "https://www.figma.com/file/NaNrfXjygZtRgMfHAFHjsp/Components---Windows?node-id=5585%3A13103",
    "badge": {
      "primary": {
        "#normal": {
          "background": "@theme-background-secondary-normal",
          "unreacted-text": "@theme-text-primary-normal",
          "reacted-text": "@theme-text-accent-normal",
          "border": "@theme-outline-secondary-normal"
        },
        "#hovered": {
          "background": "@theme-background-secondary-hover",
          "border": "@theme-outline-secondary-normal"
        },
        "#pressed": {
          "background": "@theme-background-secondary-active",
          "border": "@theme-background-secondary-active"
        }
      }
    }
  }
}
